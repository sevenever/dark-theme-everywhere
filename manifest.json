{
	"name": "Modified Dark Theme Everywhere",
	"short_name": "Dark Theme",
	"description": "Darkens bright pages for easier night time reading.  Unofficial improvement of 'Nicer Inverter'. Modified by sevenever,, the action button is now a global switch.",
	"background": {
		"scripts": [ "background.js" ]
	},
	"browser_action": {
		"default_icon": "icon38.png",
		"default_title": "Toggle dark theme"
	},
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"manifest_version": 2,
	"applications": {
		"gecko": {
			"id": "dark-theme-everywhere@rileyjshaw.com"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"match_about_blank": true,
			"js": ["client.js"],
			"css": ["main.css"],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"options_page": "options.html",
	"web_accessible_resources": [
		"icon38.png",
		"icon38-light.png"
	],
	"version": "6.0.0"
}
